<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
	xmlns:android="http://schemas.android.com/apk/res/android"
	android:layout_width="fill_parent"
	android:layout_height="fill_parent">
	<TextView
		android:gravity="right"
		android:text="Name"
		android:id="@id/txtRestName"
		android:layout_width="wrap_content"
		android:layout_height="wrap_content"
		android:layout_alignParentRight="true"></TextView>
	<ImageView
		android:layout_width="wrap_content"
		android:id="@+id/restImg"
		android:layout_height="wrap_content"
		android:layout_alignParentLeft="true"
		android:src="@drawable/icon"></ImageView>
	<TextView
		android:layout_width="wrap_content"
		android:layout_height="wrap_content"
		android:text="Address"
		android:id="@id/txtRestAddress"
		android:layout_marginBottom="10dip"
		android:clickable="true"
		android:layout_below="@id/restImg"
		android:layout_alignParentRight="true" />
	<TextView
		android:text="txtRestPhone"
		android:layout_height="wrap_content"
		android:layout_width="wrap_content"
		android:phoneNumber="true"
		android:layout_marginBottom="10dip"
		android:id="@+id/txtRestPhone"
		android:clickable="true"
		android:layout_alignParentRight="true"
		android:layout_below="@id/txtRestAddress"></TextView>
	<TextView
		android:text="txtRestPhone2"
		android:layout_height="wrap_content"
		android:layout_width="wrap_content"
		android:phoneNumber="true"
		android:clickable="true"
		android:id="@+id/txtRestPhone2"
		android:layout_below="@+id/txtRestPhone"
		android:layout_alignParentRight="true"></TextView>

	<LinearLayout
		android:layout_height="wrap_content"
		android:layout_width="fill_parent"
		android:orientation="horizontal"
		android:layout_alignParentBottom="true">
		<Button
			android:id="@+id/menu_button"
			android:layout_height="40dip"
			android:layout_width="fill_parent"
			android:layout_weight="1"
			android:background="@drawable/button"
			android:text="Menu"
			android:textColor="@android:color/black" />
		<Button
			android:id="@+id/back_button"
			android:layout_height="40dip"
			android:layout_width="fill_parent"
			android:text="Back"
			android:layout_weight="1"
			android:textColor="@android:color/black"
			android:background="@drawable/button" />

	</LinearLayout>

</RelativeLayout>
